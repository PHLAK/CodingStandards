{
    "name": "phlak/coding-standards",
    "description": "A pre-defined set of coding standards for PHP CS Fixer.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Kankiewicz",
            "email": "Chris@ChrisKankiewicz.com"
        }
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/PHLAK"
        },
        {
            "type": "paypal",
            "url": "https://paypal.me/ChrisKankiewicz"
        }
    ],
    "support": {
        "issues": "https://github.com/PHLAK/CodingStandards/issues"
    },
    "require": {
        "php": "^8.2",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "symfony/var-dumper": "^7.0",
        "yoast/phpunit-polyfills": "^3.0"
    },
    "suggest": {
        "symfony/console": "Required for initialize command"
    },
    "autoload": {
        "psr-4": {
            "PHLAK\\CodingStandards\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/cs"
    ],
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
