{
    "name": "phlak/coding-standards",
    "description": "A pre-defined set of coding standards for PHP CS Fixer.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Kankiewicz",
            "email": "Chris@ChrisKankiewicz.com"
        }
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/PHLAK"
        },
        {
            "type": "paypal",
            "url": "https://paypal.me/ChrisKankiewicz"
        }
    ],
    "support": {
        "issues": "https://github.com/PHLAK/CodingStandards/issues"
    },
    "require": {
        "php": "^7.2 || ^8.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "symfony/console": "^5.3 || ^6.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.4",
        "symfony/var-dumper": "^5.1 || ^6.0",
        "yoast/phpunit-polyfills": "^1.0.0 || ^2.0.0"
    },
    "autoload": {
        "psr-4": {
            "PHLAK\\CodingStandards\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/cs"
    ],
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
